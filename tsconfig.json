{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "paths": {
      "#types/*": ["./src/types/*"],
      "#utils/*": ["./src/utils/*"],
      "#constants/*": ["./src/constants/*"],
      "#jvm/*": ["./src/*"]
    },
    "lib": ["es2021.string", "es2018", "es2017.object", "dom"],
    "allowJs": false
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.config.ts", "__tests__/*"]
}
